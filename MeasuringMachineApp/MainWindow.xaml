<Window x:Class="MeasuringMachineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeasuringMachineApp"
        mc:Ignorable="d"
        Title="APLIKACIJA MJERNE STANICE" Height="650" Width="1020">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="Black">
            <Label  Content="STROJ 1" Margin="1" FontWeight="Bold" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Gray" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Button Name="Control1" Margin="0,1,0,0" Content="UPRAVLJANJE" FontWeight="Bold" FontSize="18"  Background="#FFF1EDED" Click="Control1_Click"  />
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <Button Name="Data1" Margin="0,1,0,0" Content="BAZA PODATAKA" FontWeight="Bold" FontSize="18"  Background="#FFF1EDED" Click="Data1_Click"/>
        </Grid>

        <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" >
            <Frame x:Name="MainFrame" Margin="1" NavigationUIVisibility="Hidden" />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Background="Black">
            <Label  Content="STROJ 2" Margin="1" FontWeight="Bold" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Gray"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <Button Name="Control2" Margin="0,1,0,0" Content="UPRAVLJANJE" FontWeight="Bold" FontSize="18"  Background="#FFF1EDED" Click="Control2_Click"/>
        </Grid>
 
        <Grid Grid.Row="2" Grid.Column="2">
            <Button Name="Data2" Margin="0,1,0,0" Content="BAZA PODATAKA" FontWeight="Bold" FontSize="18"  Background="#FFF1EDED" Click="Data2_Click"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,2,0,0" Background="Black">
            <StatusBar Height="20" VerticalAlignment="Bottom" Margin="0,1,0,0">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" MinWidth="5" />
                                <ColumnDefinition Width="135" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem>
                    <TextBlock x:Name="TbCameraOnline" Text="CNC: Offline" />
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem Grid.Column="2" HorizontalAlignment="Left">
                    <TextBlock x:Name="TbStatusMessage" Text="SPREMAN" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Left" />
                </StatusBarItem>
                <Separator Grid.Column="3" />
                <StatusBarItem Grid.Column="4">
                    <TextBlock x:Name="TbConnectionStatus" Text="PLC Status: Offline"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="4" Margin="0" HorizontalAlignment="Right">
                    <Ellipse x:Name="onlineFlag" Height="13" Margin="0" Stroke="#00000000" Width="13" VerticalAlignment="Bottom" HorizontalAlignment="Right" RenderTransformOrigin="-1.467,0.467">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF979797" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                </StatusBarItem>
            </StatusBar>

        </Grid>
        
        
    </Grid>
</Window>
